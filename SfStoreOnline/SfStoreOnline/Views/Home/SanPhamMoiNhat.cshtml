@model IEnumerable<SfStoreOnline.Models.SanPham>
<section class="newproduct bgwhite p-t-45 p-b-105">
    <div class="container">
        <div class="sec-title p-b-60">
            <h3 class="m-text5 t-center">
                Sản phẩm mới nhất
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">
                @foreach (SfStoreOnline.Models.SanPham item in Model)
                {
                    <div class="item-slick2 p-l-15 p-r-15">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                                @if (string.IsNullOrEmpty(item.ImageName))
                                {
                                    <img src="~/Image/Layout/no-image.jpg" alt="IMG-PRODUCT">
                                }
                                else
                                {
                                    <img src="~/Image/SanPham/@item.ImageName" alt="IMG-PRODUCT">
                                }

                                <div class="block2-overlay trans-0-4">
                                    @*<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                        <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                        <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                    </a>*@
                                    <div class="block2-btn-addcart w-size1 trans-0-4">
                                        <!-- Button -->
                                        <input type="button" value="Thêm giỏ hàng" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" onclick="AddCart(@item.Id, '@item.TenSp', 1);"/>
                                    </div>
                                </div>
                            </div>

                            <div class="block2-txt p-t-20">
                                <a href="@Url.Action("ChiTiet","SanPham",new { Id = item.Id})" class="block2-name dis-block s-text3 p-b-5">
                                    @item.TenSp
                                </a>

                                <span class="block2-price m-text6 p-r-5">
                                    @String.Format("{0:0,0 VNĐ}", item.GiaBan)
                                </span>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</section>

