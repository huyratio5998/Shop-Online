@model IEnumerable<SfStoreOnline.Models.TinTuc>
<section class="blog bgwhite">
    <div class="container">
        <div class="sec-title p-b-52">
            <h3 class="m-text5 t-center">
                Tin tức
            </h3>
        </div>

        <div class="row">
            @foreach (var _new in Model)
            {
                <div class="col-sm-10 col-md-4 p-b-30 m-l-r-auto">
                    <!-- Block3 -->
                    <div class="block3">
                        <a href="@Url.Action("ChiTiet","TinTuc",new { Id = _new.Id})" class="block3-img dis-block hov-img-zoom">
                            @if (string.IsNullOrEmpty(_new.ImageName))
                            {
                                <img src="~/Image/Layout/no-image.jpg" alt="IMG-BLOG">
                            }
                            else
                            {
                                <img src="~/Image/TinTuc/@_new.ImageName" alt="IMG-PRODUCT">
                            }

                        </a>

                        <div class="block3-txt p-t-14">
                            <h4 class="p-b-7">
                                <a href="@Url.Action("ChiTiet","TinTuc",new { Id = _new.Id})" class="m-text11">
                                    @_new.TieuDe
                                </a>
                            </h4>

                            <span class="s-text6">By</span> <span class="s-text7">@_new.User.HoTen</span>
                            <span class="s-text6">on</span> <span class="s-text7">@string.Format("{0:dd/MM/yyyy}", @_new.Date0)</span>

                            <p class="s-text8 p-t-16">
                                @_new.MoTa
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
